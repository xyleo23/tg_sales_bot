# Бот (получить у @BotFather)
BOT_TOKEN=123456:ABC-DEF...

# Telegram API (для Telethon — https://my.telegram.org)
TG_API_ID=12345678
TG_API_HASH=your_api_hash

# БД (для старта можно SQLite, для прода — PostgreSQL)
DATABASE_URL=sqlite+aiosqlite:///./data/bot.db
# DATABASE_URL=postgresql+asyncpg://user:pass@localhost/tg_sales

# Redis (для очередей)
REDIS_URL=redis://localhost:6379/0

# AI (OpenAI или OpenRouter)
OPENAI_API_KEY=sk-...
# OPENROUTER_API_KEY=sk-or-v1-...

# Подписка
TRIAL_DAYS=10
SUBSCRIPTION_PRICE=299
SUBSCRIPTION_DAYS=30

# ЮKassa (shop_id, secret_key из личного кабинета)
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=
YOOKASSA_WEBHOOK_PORT=8080

# Роли (telegram_id через запятую)
# SUPER_ADMIN_IDS — полный доступ, финансы, смена ролей
# ADMIN_IDS — без финансов и критичных настроек
# TESTER_IDS — как user, без оплаты, могут выгружать логи
SUPER_ADMIN_IDS=123456789
ADMIN_IDS=
TESTER_IDS=

# Задержки (секунды)
MAILING_DELAY_MIN=30
MAILING_DELAY_MAX=90
MAILING_MAX_PER_ACCOUNT=20
INVITE_DELAY_SEC=5
